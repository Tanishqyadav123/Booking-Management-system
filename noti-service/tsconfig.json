{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
        "@shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*" , "../shared/src/**/*"],
  "exclude": ["node_modules"]
}